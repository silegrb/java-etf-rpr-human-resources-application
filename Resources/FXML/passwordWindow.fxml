<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane fx:id="passwordChangeGridPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefHeight="150" prefWidth="370" hgap="5" vgap="5">
    <stylesheets> <URL value="@/CSS/applicationStyling.css" /> </stylesheets>

    <Label text="Old password" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="passwordLabels"/>
    <PasswordField fx:id="oldPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="2" styleClass="passwordFields"/>
    
    <Label text="New password" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="passwordLabels"/>
    <PasswordField fx:id="newPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="2" styleClass="passwordFields"/>
    
    <Label text="Confirm new password" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="passwordLabels"/>
    <PasswordField fx:id="confirmNewPasswordField" GridPane.rowIndex="3" GridPane.columnIndex="2" styleClass="passwordFields"/>
    
    <Button fx:id="okBtn" text="OK" textAlignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="1" onAction="#clickOkBtn" styleClass="passwordButtons"/>
    <Button fx:id="cancelBtn" text="Cancel" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="4" onAction="#clickCancelBtn" styleClass="passwordButtons"/>

    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding>
</GridPane>
